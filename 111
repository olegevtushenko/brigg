#!groovy
// Check ub1 properties
properties([disableConcurrentBuilds()])

pipeline {
    agent { 
        label 'master'
        }
    options {
        buildDiscarder(logRotator(numToKeepStr: '10', artifactNumToKeepStr: '10'))
        timestamps()
    }
    stages {
        stage("First step") {
            steps {
                sh 'ssh root@ub1 \'docker run  -t -i -d  nginx:latest\''
            }
        }
        stage("Second step") {
            steps {
                sh 'ssh root@ub1 \'docker ps -a >> /var/log/1.log\''
            }
        }
        stage("therd step") {
            steps {
                sh 'ssh root@ub1 \'docker kill $(docker ps -a -q)\''
            }
        }
        
    }
}
}
